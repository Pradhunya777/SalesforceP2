<aura:component  controller="contactListController" 
                implements="force:hasRecordId,flexipage:availableforAllPageTypes">
    <aura:attribute name="contactList" type="Contact[]" /> 
  
<aura:handler name="init" value="{!this}" action="{!c.doInit}" />

<aura:handler name="quickContact" event="c:quickConEvent" action="{!c.handleCompEvent}"/>

    <div>
   		<c:quickContact accountId="{!v.recordId}" />
    </div>
    <div class="slds-var-p-around_small">
        <div class="slds-grid slds-wrap"> 
               
            <aura:iteration items="{!v.contactList}" var="con">
                <div class="slds-col slds-size_1-of-3 slds-var-p-around_small">
                    <lightning:card title="{!con.LastName}" 
                        footer="{!con.Email}"
                        iconName="Standard:Contact">

                        <aura:set attribute="actions">
                            <lightning:button label="View Details"/>  
                        </aura:set>
                        <p class="slds-var-p-around_small">
                            {!con.FirstName}&nbsp;&nbsp;
                            {!con.LastName}<br/>{!con.phone}
                        </p>
                    
                    </lightning:card>

                </div>

            </aura:iteration>

        </div>
    </div>
</aura:component>