<aura:component  implements="force:hasRecordId,flexipage:availableforAllPageTypes">
   <div style="font-size:20px" class="slds-var-p-around_small"> 
        Modern Calculator <br /></div> 
    
    <aura:attribute name="input1" type="integer" description="For First Input"/>
    <aura:attribute name="input2" type="integer" description="For Second Input"/>
    <aura:attribute name="output" type="integer" description="For Output" />
      <lightning:input type="number" value="{!v.input1}"
                       label="Please Enter First Number" /><br />
      <lightning:input type="number" value="{!v.input2}" 
                       label="Please Enter Second Number" />
        <br />  
    The Output Is :  {!v.output}  
    <br /><br />
    <lightning:button variant="brand" value="Component Methods" label="Add" onclick="{!c.doAdd}" />
    <lightning:button variant="brand" value="Component Methods" label="Sub" onclick="{!c.doSub}" />
    <lightning:button variant="brand" value="Component Methods" label="Mult" onclick="{!c.doMult}" />
    <lightning:button variant="brand" value="Component Methods" label="Div" onclick="{!c.doDiv}" />

	
</aura:component>