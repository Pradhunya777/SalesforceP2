<aura:component controller="WorkOrderAuraController" implements="force:lightningQuickAction,force:hasRecordId">
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="isSpinner" type="Boolean" default="false" />

    <ltng:require scripts="{!$Resource.AuraUtils}" afterScriptsLoaded="{!c.doInit}" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div class="main-container" style="padding: 10px;">
        <div class="header-text">
            <p>Click "Upload WorkOrder" button to initiate the uploading of WorkOrder details to SAP server. 
                <br/>Please note the process might take a minute or two.
            </p>
        </div>
        <div class="button-wrap" style="margin-top: 15px;">
            <lightning:button variant="brand" label="Upload WorkOrder" title="Upload WorkOrder" onclick="{!c.uploadBtnHandler}" />
        </div>

        <aura:if isTrue="{!v.isSpinner}">
            <lightning:spinner alternativeText="Loading" size="large" />
        </aura:if>
    </div>
</aura:component>